<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

	<div><%= f.label :first_name %><br />
  <%= f.email_field :first_name %></div>

	<div><%= f.label :last_name %><br />
  <%= f.email_field :last_name %></div>

  <div><%= f.label :username %><br />
  <%= f.email_field :username %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Retype Password" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :country %><br />
  <%= f.collection_select(:country_id, Country.all, :id, :name ) %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
